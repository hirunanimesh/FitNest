# ==============================================
# AdminService Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# Service Configuration
# ==============================================
PORT=3006
NODE_ENV=development

# ==============================================
# Google API Configuration
# ==============================================
# Get this from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here

# ==============================================
# Supabase Configuration
# ==============================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================
# SendGrid Email Configuration
# ==============================================
# Get this from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@fitnest.com

# ==============================================
# Service URLs
# ==============================================
# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3010

# API Gateway URL (for inter-service communication)
API_GATEWAY_URL=http://localhost:3000

# ==============================================
# Optional Configuration
# ==============================================
# Uncomment and configure if needed

# JWT Configuration
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRES_IN=7d

# Logging Level
# LOG_LEVEL=debug
# Options: error, warn, info, debug

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Production Overrides
# ==============================================
# Uncomment these for production deployment
# NODE_ENV=production
# PORT=3006
# FRONTEND_URL=https://fitnest.com
# API_GATEWAY_URL=https://api.fitnest.com
